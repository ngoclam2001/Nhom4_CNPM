<h1 class="d-block text-success">Them phong dang ky</h1>
<form method="POST" action="/room">
    <div class="mb-3">
        <label for="room" class="form-label">Tên Phòng</label>
        <input type="text" required name="name" class="form-control" id="room">
    </div>
    <div class="mb-3">
        <label for="elec" class="form-label">Số Điện</label>
        <input type="text" required name="elec" class="form-control" id="elec">
    </div>
    <div class="mb-3">
        <label for="water" class="form-label">Số Nước</label>
        <input type="text" required name="water" class="form-control" id="water">
    </div>
     <div class="mb-3">
        <label for="sv" class="form-label">Số Sinh Vien</label>
        <input type="text" required name="sv" class="form-control" id="sv">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>